        <externalId>false</externalId>
        <label>Case</label>
        <referenceTo>Case</referenceTo>
        <relationshipLabel>Escalation Alerts</relationshipLabel>
        <relationshipName>Escalation_Alerts</relationshipName>
        <required>true</required>
        <type>MasterDetail</type>
    </fields>
    <fields>
        <fullName>Alert_Type__c</fullName>
        <description>Type of escalation (SLA/Sentiment/Value)</description>
        <externalId>false</externalId>
        <label>Alert Type</label>
        <picklist>
            <picklistValues>
                <fullName>SLA_Breach</fullName>
                <default>false</default>
            </picklistValues>
            <picklistValues>
                <fullName>Negative_Sentiment</fullName>
                <default>false</default>
            </picklistValues>
            <picklistValues>
                <fullName>High_Value_Customer</fullName>
                <default>false</default>
            </picklistValues>
            <picklistValues>
                <fullName>Predictive_Escalation</fullName>
                <default>false</default>
            </picklistValues>
            <sorted>false</sorted>
        </picklist>
        <required>false</required>
        <type>Picklist</type>
    </fields>
    <fields>
        <fullName>Severity__c</fullName>
        <description>Severity level of alert</description>
        <externalId>false</externalId>
        <label>Severity</label>
        <picklist>
            <picklistValues>
                <fullName>Critical</fullName>
                <default>false</default>
            </picklistValues>
            <picklistValues>
                <fullName>High</fullName>
                <default>false</default>
            </picklistValues>
            <picklistValues>
                <fullName>Medium</fullName>
                <default>false</default>
            </picklistValues>
            <sorted>false</sorted>
        </picklist>
        <required>false</required>
        <type>Picklist</type>
    </fields>
    <fields>
        <fullName>Acknowledged_By__c</fullName>
        <description>User who acknowledged the alert</description>
        <externalId>false</externalId>
        <label>Acknowledged By</label>
        <referenceTo>User</referenceTo>
        <relationshipName>Escalation_Alerts</relationshipName>
        <required>false</required>
        <type>Lookup</type>
    </fields>
    <fields>
        <fullName>Acknowledged_At__c</fullName>
        <description>When alert was acknowledged</description>
        <externalId>false</externalId>
        <label>Acknowledged At</label>
        <required>false</required>
        <type>DateTime</type>
    </fields>
    <label>Escalation Alert</label>
    <listViews>
        <fullName>All</fullName>
        <filterScope>Everything</filterScope>
        <label>All</label>
    </listViews>
    <nameField>
        <displayFormat>ALERT-{000000}</displayFormat>
        <label>Alert Number</label>
        <type>AutoNumber</type>
    </nameField>
    <pluralLabel>Escalation Alerts</pluralLabel>
    <sharingModel>ControlledByParent</sharingModel>
    <startsWith>Vowel</startsWith>
